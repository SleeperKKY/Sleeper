<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewAlarmTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="Ring: "
        android:textSize="32dp"
        android:textColor="#2b29ff"
        android:textStyle="bold" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtclockTimeRemaning"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewAlarmTime"
        android:layout_marginTop="10dp"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/textViewSleepModeStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtclockTimeRemaning"
        android:textSize="32dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="#2b29ff"
        android:text="Status: "/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/btnStopSleepMeasure"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewSleepModeStatus"
        android:layout_marginTop="50dp"
        />

</RelativeLayout>